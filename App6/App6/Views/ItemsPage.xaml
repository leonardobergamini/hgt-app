<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="App6.Views.ItemsPage" 
             xmlns:vm="clr-namespace:App6.ViewModels"
             x:Name="BrowseItemsPage"
             Title="Meus ingressos">
    
    <ContentPage.BindingContext> 
        <vm:ItemsViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ItemsListView" 
                      Margin="30"
                      RowHeight="300"
                      ItemsSource="{Binding ListaEventos}"
                      SeparatorVisibility="None"
                      HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout HorizontalOptions="FillAndExpand"
                                         Margin="0,10,0,10"
                                         Padding="0">
                                <ContentView >
                                    <Image Source="{Binding UrlImagem}"/>
                                </ContentView>
                                <Button WidthRequest="1" HeightRequest="1" BackgroundColor="Black"/>
                                <Label Text=""/>
                                <Label Text=""/>
                                <Label Text="{Binding NomeEvento}" 
                                       LineBreakMode="NoWrap"
                                       FontSize="20"/>
                                <Label Text="Ínicio do evento:" 
                                       LineBreakMode="NoWrap"
                                       FontSize="13" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding DtInicioEvento}" 
                                       LineBreakMode="NoWrap"
                                   FontSize="13" />
                                <Label Text="Fim do evento: " 
                                       LineBreakMode="NoWrap"
                                       FontSize="13" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding DtFinalEvento}" 
                                       LineBreakMode="NoWrap"
                                   FontSize="13" />
                                <Label Text="Local" 
                                       LineBreakMode="NoWrap"
                                       FontSize="13" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Local.NomeLocal}" 
                                       LineBreakMode="NoWrap"
                                   FontSize="13" />
                                
                            </StackLayout>
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

